{
  "defaultSeverity": "warning",
  "extends": [
    "tslint:recommended"
  ],
  "linterOptions": {
    "exclude": [
      "node_modules/**"
    ]
  },
  "rules": {
    "quotemark": [true, "single"],
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "object-literal-sort-keys": false,
    "semicolon": false,
    "trailing-comma": true,
    "arrow-parens": false,
    "max-classes-per-file": false
  }
}
